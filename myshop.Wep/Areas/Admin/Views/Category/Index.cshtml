@model IEnumerable<Category>

@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "View Categories";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<div>
    <a href="/Admin/Category/Create" class="btn btn-primary">Create</a>
</div>
<br />
<table class="table table-hover " width="100%">
    <tr>
        <td>Name</td>
        <td>Description</td>
        <td>Created Time</td>
        <td>Actions</td>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedDate</td>
            <td>
                <a href="/Admin/Category/Edit/@item.Id" class="btn btn-success">Edit</a>
                <a href="/Admin/Category/Delete/@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>